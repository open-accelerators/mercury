                    <directory>src/test/resources</directory>
                    <includes>
                        <include>**/*.properties</include>
                    </includes>
                </fileSet>
            </fileSets>
        </module>
        <module dir="__rootArtifactId__-service" id="${rootArtifactId}-service" name="${rootArtifactId}-service">
